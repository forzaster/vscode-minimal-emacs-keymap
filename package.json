{
  "name": "minimal-emacs-keymap",
  "displayName": "minimal-emacs-keymap",
  "description": "minimal emacs keymap",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "minimal-emacs-keymap.showInfo",
        "title": "Show Info"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+f",
        "command": "cursorMove",
        "args": {
          "to": "right",
          "value": 1
        },
        "when": "editorTextFocus && !emacsKey.selectMode"
      },
      {
        "key": "ctrl+b",
        "command": "cursorMove",
        "args": {
          "to": "left",
          "value": 1
        },
        "when": "editorTextFocus && !emacsKey.selectMode"
      },
      {
        "key": "ctrl+p",
        "command": "cursorMove",
        "args": {
          "to": "up",
          "value": 1
        },
        "when": "editorTextFocus && !emacsKey.selectMode"
      },
      {
        "key": "ctrl+n",
        "command": "cursorMove",
        "args": {
          "to": "down",
          "value": 1
        },
        "when": "editorTextFocus && !emacsKey.selectMode"
      },
      {
        "key": "ctrl+a",
        "command": "cursorLineStart",
        "when": "editorTextFocus && !emacsKey.selectMode"
      },
      {
        "key": "ctrl+e",
        "command": "cursorLineEnd",
        "when": "editorTextFocus && !emacsKey.selectMode"
      },
      {
        "key": "ctrl+f",
        "command": "cursorRightSelect",
        "when": "editorTextFocus && emacsKey.selectMode"
      },
      {
        "key": "ctrl+b",
        "command": "cursorLeftSelect",
        "when": "editorTextFocus && emacsKey.selectMode"
      },
      {
        "key": "ctrl+p",
        "command": "cursorUpSelect",
        "when": "editorTextFocus && emacsKey.selectMode"
      },
      {
        "key": "ctrl+n",
        "command": "cursorDownSelect",
        "when": "editorTextFocus && emacsKey.selectMode"
      },
      {
        "key": "ctrl+e",
        "command": "cursorEndSelect",
        "when": "editorTextFocus && emacsKey.selectMode"
      },
      {
        "key": "ctrl+d",
        "command": "deleteRight",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+k",
        "command": "minimal-emacs.ctrl+k",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+y",
        "command": "minimal-emacs.ctrl+y",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+space",
        "command": "minimal-emacs.ctrl+space",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+w",
        "command": "minimal-emacs.ctrl+w",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+x ctrl+s",
        "command": "workbench.action.files.save",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+s",
        "command": "actions.find",
        "when": "editorTextFocus && !textInputFocus"
      },
      {
        "key": "ctrl+s",
        "command": "editor.action.nextMatchFindAction",
        "when": "editorTextFocus && textInputFocus"
      },
      {
        "key": "ctrl+r",
        "command": "editor.action.previousMatchFindAction",
        "when": "editorTextFocus && textInputFocus"
      },
      {
        "key": "ctrl+g",
        "command": "closeFindWidget",
        "when": "editorTextFocus && textInputFocus"
      },
      {
        "key": "ctrl+/",
        "command": "undo",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "vsce": "^2.11.0",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  }
}
